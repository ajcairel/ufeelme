<%- include('../partials/header') %>


<h1>HELLO</h1>


<div>
    <%- playlist.link %>
</div>





<div class="container"> 
    <% if (user) { %>
    <form id="add-review" method="POST" action="/playlists/<%= playlist._id %>/reviews">
        <label>Review:</label>
        <textarea name="content"></textarea>
        <input type="submit" value="Add Review">
      </form>
      <% } %>
    
      <table>
          <thead>
              <th>Reviews</th>
          </thead>
          <tbody>
              <% playlist.reviews.forEach(function(r) { %>
                <tr>
                    <td><img class="avatar" src="<%= r.userAvatar%>" alt="avatar"><%= r.userName %></td>
                    <td> <%= r.createdAt.toLocaleDateString() %> </td>
                    <td> <%= r.content %> </td>
                    <td>
                    <% if (user && user._id.equals(r.user)) { %>
                        <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                            <button type="submit">X</button>
                        </form>
                        <form action="/reviews/<%= r._id %>?_method=PUT" method="POST">
                            <input name="content" value="<%= r.content %>">
                            <button type="submit">EDIT COMMENT</button>
                          </form>
                        <% } %>
                    </td>
                </tr>
    
                <% }); %>
            </tbody>
        </table>

</div>



<%- include('../partials/footer') %>