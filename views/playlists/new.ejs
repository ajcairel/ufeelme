<%- include('../partials/header') %>
<body>
  <% if (service === 'Spotify') { %>
    <h1>SPOTIFY</h1>

  <% } else if (service === 'Apple') { %>
    <h1>Apple Music</h1>
  
  <% } else if (service === 'Sound') { %> 
      <h1>Soundcloud</h1>
    <% } %>
    <div class="container" >   
    <form id="add-playlist" action="/playlists" method="POST">
        <label>Playlist Name:</label>
        <input type="text" name="name">
        <label>Streaming Service</label>
        <input type="text" name="streamingService" value="<%= service %>" readonly></input>
        <label>Link</label>
        <input type="text" name="link" >
        <input type="submit" value="add-playlist">
      </form>
    </div>
    
</body>



<%- include('../partials/footer') %>