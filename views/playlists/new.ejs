<body>
  <% if (service === 'Spotify') { %>
    <% let stream = 'Spotify' %>
    <h1>SPOTIFY</h1>

  <% } else if (service === 'Apple') { %>
    <% stream = 'Apple Music' %>
    <h1>Apple Music</h1>
    
    <% } else if (service === 'Sound') { %> 
      <% stream = 'Soundcloud' %>
      <h1>Soundcloud</h1>
    <% } %>
    <div class="container" >   
    <form id="add-playlist" action="/playlists" method="POST">
        <label>Playlist Name:</label>
        <input type="text" name="name">
        <label>Streaming Service</label>
        <input type="text" name="streamingService" value="<%= stream %>" readonly></input>
        <label>Link</label>
        <input type="text" name="link" required pattern="<iframe(.+)<\/iframe>">
        <input type="submit" value="add-playlist">
      </form>
    </div>

    <div class="tutorial">
      <img src="https://i.imgur.com/fcrrfLw.gif" alt="tutorial">
    </div>
    
</body>



